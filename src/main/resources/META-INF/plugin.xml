<idea-plugin>
    <id>com.github.alanxtl.wslpathconverter</id>
    <name>wsl_path_converter</name>
    <vendor>alanxtl</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.alanxtl.wslpathconverter.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <postStartupActivity implementation="com.github.alanxtl.wslpathconverter.startup.MyProjectActivity" />
    </extensions>
</idea-plugin>
